{% extends 'base.html.twig' %}

{% block title %}User Profile
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12">
				<h1 class="text-center">
					Your profile
				</h1>
			</div>

			<div class="col-6">
				{{user.email}}
			</div>
			<div class="row justify-content-center">

				<div class="col-6">
					<h2>Edit your profile :</h2>
					{{form(form)}}
					</div>


				</div>
				<div class="row justify-content-center">

					<div class="col-6">
						<h2>Edit your password :</h2>
						{{form(form_edit_password)}}
						</div>
					</div>

				</div>
			</div>
		{% endblock %}
